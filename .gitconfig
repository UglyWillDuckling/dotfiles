[core]
	fileMode = false
	ignorecase = false
[user]
	email = vladimi.sedlar@monsoonconsulting.com
	name = vladimir
[alias]
	adog = log --all --decorate --oneline --graph
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  js = status
  st = status
  ci = commit --verbose
  co = checkout
  di = diff --find-copies-harder
  dc = diff --find-copies-harder --cached
  am = amend
  amend = commit --amend
  a = add
  aa = add --all
  ff = merge --ff-only
  noff = merge --no-ff
  fa = fetch --all
  pom = push origin main
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  l = "!. ~/.githelpers && pretty_git_log"
  r = !GIT_NO_PAGER=1 git l -30
  ra = !git r --all
  pu = push --set-upstream origin
  dr = push origin --delete
  b = branch
  bc = b --contains
  unstage = restore --staged
  ss = stash
  ls = log --stat --oneline
