	name = vladimir
	email = v.s3dlar@gmail.com
[alias]
	adog = log --all --decorate --oneline --graph
	fix-perm = "git diff -p | grep -E '^(diff|old mode|new mode)' | sed -e 's/^old/NEW/;s/^new/old/;s/^NEW/new/' | git apply; };"
  st = status
  ci = commit --verbose
  co = checkout
  di = diff --find-copies-harder
  dc = diff --find-copies-harder --cached
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  noff = merge --no-ff
  fa = fetch --all
  pom = push origin main
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
    l = "!. ~/.githelpers && pretty_git_log"
  r = !GIT_NO_PAGER=1 git l -30
  ra = !git r --all
[core]
	autocrlf = input
	fileMode = false
[color]
    ui = auto
[color "diff-highlight"]
	  oldNormal = red
	  oldHighlight = red "#500000"
	  newNormal = green
	  newHighlight = green "#003000"
[color "diff"]
	  meta = 11
	  frag = magenta bold
	  commit = yellow bold
	  old = red
	  new = green
	  whitespace = "#ffff00" reverse
