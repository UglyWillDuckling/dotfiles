#!/usr/bin/env bash

ln -f -s "$(pwd)"/gitconfig "$HOME"/.gitconfig
ln -f -s "$(pwd)"/zshrc "$HOME"/.zshrc
ln -f -s "$(pwd)"/vimrc "$HOME"/.vimrc
ln -f -s "$(pwd)"/bash_aliases "$HOME"/.bash_aliases
ln -f -s "$(pwd)"/zle "$HOME"/.zle
ln -f -s "$(pwd)"/calibre/config "$HOME"/.config/calibre
ln -f -s "$(pwd)"/tmux.conf "$HOME"/.tmux.conf

### alacritty
ln -f -s "$(pwd)"/alacritty.yml "$HOME"/.config/alacritty/alacritty.yml
ln -f -s "$(pwd)"/theme.toml "$HOME"/.config/alacritty/theme.toml

### Nvim - missing

### misc
ln -f -s "$(pwd)"/mouse.zsh "$HOME"/mouse.zsh
